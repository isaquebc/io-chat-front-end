$_initial = 0px

close($name = "vertical", $initial = 145px, $duration = .5s, $delay = 0s, $count = 1) {
	$_initial = $initial

	animation-name $name
	animation-duration $duration
	animation-delay $delay
	animation-iteration-count $count
	
}

@keyframes vertical
	from 
		height $_initial
	to
		height 0
